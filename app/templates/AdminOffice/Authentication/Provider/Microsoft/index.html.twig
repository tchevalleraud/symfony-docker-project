{% extends "AdminOffice/Authentication/Provider/Microsoft/_base.html.twig" %}

{% block sub_menu_title_href path('adminoffice.authentication.provider.microsoft.index') %}
{% block sub_menu_title 'AdminOffice/Authentication/Provider/MicrosoftController::index' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-8">
            {{ form_start(form) }}
                {% include "_forms/inline/input.checkbox.html.twig" with { 'form': form.security_microsoft_enabled } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_client_id } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_client_secret } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_redirectUri } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_url_authorize } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_url_accessToken } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_url_ressource } %}
                {% include "_forms/input.text.html.twig" with { 'form': form.security_microsoft_scopes } %}
                <div class="row pt-4">
                    <div class="col-12 text-end">
                        {{ form_widget(form.submit) }}
                    </div>
                </div>
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}