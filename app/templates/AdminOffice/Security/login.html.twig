{% extends "AdminOffice/Security/base.html.twig" %}

{% block title %}Login - {{ parent() }}{% endblock %}

{% block body %}
    <main class="form-signin text-center">
        <form action="{{ path('adminoffice.security.login') }}" method="post">
            <img class="mb-4" src="{{ asset('assets/images/icons/symfony.png') }}" alt="" width="200" height="175">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-floating mb-3">
                <input type="text" class="form-control rounded-3" id="username" name="_username" value="{{ last_username }}" placeholder="name@example.com"/>
                <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control rounded-3" id="password" name="_password" placeholder="Password"/>
                <label for="floatingPassword">Password</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

            <hr class="my-4">

            <button class="w-100 py-2 mb-2 btn btn-outline-provider-facebook rounded-3" type="submit">
                <i class="fa-brands fa-facebook"></i>
                Sign in with Facebook
            </button>

            <button class="w-100 py-2 mb-2 btn btn-outline-provider-github rounded-3" type="submit">
                <i class="fa-brands fa-github"></i>
                Sign in with Github
            </button>

            <button class="w-100 py-2 mb-2 btn btn-outline-provider-google rounded-3" type="submit">
                <i class="fa-brands fa-google"></i>
                Sign in with Google
            </button>

            <button class="w-100 py-2 mb-2 btn btn-outline-provider-instagram rounded-3" type="submit">
                <i class="fa-brands fa-instagram"></i>
                Sign in with Instagram
            </button>

            <button class="w-100 py-2 mb-2 btn btn-outline-provider-linkedin rounded-3" type="submit">
                <i class="fa-brands fa-linkedin"></i>
                Sign in with LinkedIn
            </button>

            <button class="w-100 py-2 mb-2 btn btn-outline-provider-microsoft rounded-3" type="submit">
                <i class="fa-brands fa-microsoft"></i>
                Sign in with Microsoft
            </button>

            <p class="mt-3 mb-3 text-muted">© 2021–2022</p>
        </form>
    </main>
{% endblock %}