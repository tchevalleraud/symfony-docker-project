{% extends "base.html.twig" %}

{% set NAVBAR_CLASS = "navbar-dark bg-black" %}

{% set NAVBAR_BRAND_HREF = path('root') %}
{% block NAVBAR_BRAND %}
    {{ parent() }} - Manage
{% endblock %}

{% block NAVBAR_COLLAPSE %}
    {% set activeRoute = app.request.attributes.get('_route') %}
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
            <a class="nav-link {{ 'adminoffice.dashboard.' in activeRoute ? 'active' }}" aria-current="page" href="{{ path('adminoffice.dashboard.index') }}">Dashboard</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle {{ 'adminoffice.authentication.' in activeRoute ? 'active' }}" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Authentication
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item {{ 'adminoffice.authentication.overall.' in activeRoute ? 'active' }}" href="{{ path('adminoffice.authentication.overall.index') }}">Overall</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item {{ 'adminoffice.authentication.ldap.' in activeRoute ? 'active' }}" href="{{ path('adminoffice.authentication.ldap.index') }}">LDAP</a></li>
                <li><a class="dropdown-item {{ 'adminoffice.authentication.local.' in activeRoute ? 'active' }}" href="{{ path('adminoffice.authentication.local.index') }}">Local Database</a></li>
            </ul>
        </li>
    </ul>
{% endblock %}

{% block toasts %}
    {{ parent() }}
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="securityIdle" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-idle="{{ app.session.get('_security.idle.remaining') }}">
            <div class="d-flex">
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_adminoffice') }}
{% endblock %}