<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ APP_NAME }}{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('assets/favicons/favicon.svg') }}" />
        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap/bootstrap.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg {{ NAVBAR_CLASS is defined ? NAVBAR_CLASS : "navbar-light bg-light" }}">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ NAVBAR_BRAND_HREF is defined ? NAVBAR_BRAND_HREF : path('root') }}">
                    {% block NAVBAR_BRAND %}
                        <img src="{{ asset('assets/favicons/favicon.svg') }}" alt="" width="30" height="24" class="d-inline-block align-text-top">
                        {{ APP_NAME | upperword }}
                    {% endblock %}
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% block NAVBAR_COLLAPSE '' %}
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery-3.6.0.min.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
